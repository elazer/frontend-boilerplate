# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
# Change these settings to your own preference
indent_style = space
indent_size = 4

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.css]
indent_style = space
indent_size = 2

[*.{js,jsx}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.sh]
indent_style = tab
indent_size = 4

[*.sublime-project]
indent_style = tab
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[docker-compose.{yaml,override.yaml,override.yaml.dist,override.*.yaml.dist}]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = tab
indent_size = 4
